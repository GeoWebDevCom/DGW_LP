<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <script type="text/javascript" src="~/Scripts/jquery-2.2.2.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

 

</head>
<body>
    <div class="social">
        <a href="#"><i class="fa fa-2x fa-facebook-square" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-2x fa-youtube-square" aria-hidden="true"></i></a>
        <a href="javascript:fbshareCurrentPage()" target="_blank" alt="Chia sẻ lên Facebook"><i class="fa fa-2x fa-share-alt-square" aria-hidden="true"></i></a>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top my-header">
        <div class="container" style="position:relative">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav my-navbar">
                    <li id="home" class="active"><a href="/">Trang chủ</a></li>
                    <li id="binhchon"><a href="/binhchon">Bình chọn</a></li>
                    <li id="tltag"><a href="/thele">Thể lệ chương trình</a></li>
                </ul>
                <div class="li-login">
                    <a class="btnLogin" href="#">Đăng nhập</a>
                </div>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="padding-top:25px">
                <ul class="list">
                    <li class="list-li">
                        <a href="/">Trang chủ</a>
                    </li>
                    <li class="list-li">
                        <a href="/binhchon">Bình chọn</a>
                    </li>
                    <li class="list-li">
                        <a href="/thele">Thể lệ chương trình</a>
                    </li>
                </ul>
                <p class="copyright">© Copyright 2016</p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="logo-block">
                    <div class="logo-item">
                        <img src="~/Imgs/digiLogo.png" />
                    </div>
                    <div class="logo-item">
                        <img src="~/Imgs/hpLogo.png" />
                    </div>
                </div>
            </div>
        </div>
      
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
