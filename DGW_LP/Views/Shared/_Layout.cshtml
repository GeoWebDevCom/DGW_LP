@using DGW_LP.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <meta name="description" content="@ViewBag.Description" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:image" content="@ViewBag.Banner" />
    <meta property="og:title" content="@ViewBag.Title" />
    <link rel="shortcut icon" href="~/Imgs/hpLogo.png" type="image/x-icon">




    <script type="text/javascript" src="~/Scripts/jquery-2.2.2.min.js"></script>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Tag Manager -->
    <script>
(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window,document,'script','dataLayer','GTM-WB98VT');</script>
    <!-- End Google Tag Manager -->

</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WB98VT"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="social">
        <a href="javascript:fbshareCurrentPage()"><i class="fa fa-2x fa-facebook-square" aria-hidden="true"></i></a>
        <a href="#"><i class="fa fa-2x fa-youtube-square" aria-hidden="true"></i></a>
        <a href="javascript:fbshareCurrentPage()" target="_blank" alt="Chia sẻ lên Facebook"><i class="fa fa-2x fa-share-alt-square" aria-hidden="true"></i></a>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top my-header">
        <div class="container" style="position:relative">
            <div class="navbar-header">
                <button id="coll" type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-brand">
                <img style="height:50px;" src="~/Imgs/hpLogo_w.png" />
            </div>

            <div class="navbar-collapse collapse mb-menu">
                <ul class="nav navbar-nav my-navbar">
                    <li id="home" class="active"><a href="/">Trang chủ</a></li>
                    <li id="binhchon"><a href="/binhchon">Bình chọn</a></li>
                    <li id="tltag"><a href="/thele">Thể lệ chương trình</a></li>
                    <li class="lg-block">
                        @if (Request.IsAuthenticated)
                        {
                            <div>
                                <img style="height:32px; width:32px; border-radius:5px" src="@MyHelper.GetSocialAvatar()" />
                                <div class="fixed-width"><span>@HttpContext.Current.User.Identity.Name</span></div>
                                | <a href="javascript:document.getElementById('logoff').submit();" title="Thoát"><i style="color:#fff" class="fa fa-lg fa-sign-out" aria-hidden="true"></i></a>
                            </div>
                        }
                        else
                        {
                            <div>
                                <a class="btnLogin" href="#" onclick="ShowLogin()">Đăng nhập</a>
                            </div>
                        }

                    </li>
                </ul>

                <div class="lg-block-2">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="social-logined">
                            <img style="height:32px; width:32px; border-radius:5px" src="@MyHelper.GetSocialAvatar()" />
                            <div class="fixed-width"><span>@HttpContext.Current.User.Identity.Name</span></div>
                            | <a href="javascript:document.getElementById('logoff').submit();" title="Thoát"><i class="fa fa-lg fa-sign-out" aria-hidden="true"></i></a>
                        </div>
                    }
                    else
                    {
                        <div class="li-login">
                            <a class="btnLogin" href="#" data-toggle="modal" data-target="#loginModal">Đăng nhập</a>
                        </div>
                    }
                </div>





                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 desk-only" style="padding-top:25px">
                <ul class="list">
                    <li class="list-li">
                        <a href="/">Trang chủ</a>
                    </li>
                    <li class="list-li">
                        <a href="/binhchon">Bình chọn</a>
                    </li>
                    <li class="list-li">
                        <a href="/thele">Thể lệ chương trình</a>
                    </li>
                </ul>
                <p class="copyright">© Copyright 2016</p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="logo-block">
                    <div class="logo-item">
                        <img style="height:100%" src="~/Imgs/digiLogo.png" />
                    </div>
                    <div class="logo-item">
                        <img style="height:100%" src="~/Imgs/hpLogo.png" />
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mb-only" style="padding:0px">
                <ul style="list-style:none; text-align:center; padding-left:0px;">
                    <li style="list-style:none; display:inline-block; padding:0px 5px;">
                        <a href="/">Trang chủ</a>
                    </li>
                    <li style="list-style:none; display:inline-block; padding:0px 5px;">
                        <a href="/binhchon">Bình chọn</a>
                    </li>
                    <li style="list-style:none; display:inline-block; padding:0px 5px;">
                        <a href="/thele">Thể lệ chương trình</a>
                    </li>
                </ul>
                <p class="copyright" style="text-align:center">© Copyright 2016</p>
            </div>
        </div>

    </footer>

    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document" style="padding-top:70px;">
            <div class="modal-content">
                <div class="modal-body">
                    <h3 style="text-align:center; margin-top:0px">Tham gia với chúng tôi</h3>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-bottom:15px">
                            <a class="btn btn-lg btn-block btn-social btn-facebook" href="javascript:document.getElementById('fbsubmit').submit();">
                                <span class="fa fa-facebook"></span> Đăng nhập Facebook
                            </a>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <a class="btn btn-lg btn-block btn-social btn-google" href="javascript:document.getElementById('gsubmit').submit();">
                                <span class="fa fa-google"></span> Đăng nhập Google+
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div style="display:none !important">
        <form id="fbsubmit" method="post" action="/Account/ExternalLogin?ReturnUrl=@HttpContext.Current.Request.Url.PathAndQuery&provider=Facebook">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-default" name="provider" value="Facebook">Facebook</button>
        </form>
        <form id="gsubmit" method="post" action="/Account/ExternalLogin?ReturnUrl=@HttpContext.Current.Request.Url.PathAndQuery&provider=Google">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-default" name="provider" value="Google">Facebook</button>
        </form>
        <form id="logoff" method="post" action="/Account/LogOff">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-default">Thoát</button>
        </form>

    </div>

    <script type="text/javascript" src="~/Scripts/js/main.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts",required: false)
</body>
</html>
